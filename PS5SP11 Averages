//Complete the method to return the product of
//all the numbers 1 to the parameter n (inclusive)
import java.util.Scanner;

public class MathUtil
{
   public int product(int n)
   {
        // TODO: Complete the function to return
        // the product of 1, ..., N-1, N
        int answer = 1;
        for (int i=1;i<=n;i++) 
        {
            answer = answer*i;
        }
       return answer;
   }
   
   public double averageScore()
   {
       Scanner in = new Scanner(System.in);
       int count = 0;
       int sum = 0;
       //TODO: Find and return the average of the numbers entered.
       System.out.print("Enter a score. -1 to quit: "); //use this for the prompt
       while (in.hasNextInt()) 
       {
           int value = in.nextInt();
           if (value < 0 && count != 0)
           {
               return 1*sum / count;
            } else if (value < 0 && count == 0)
            { return 0;
            } else {
                sum=sum+value;
                count++;
                System.out.print("Enter a score. -1 to quit: ");
            }
        }
        return 0;
    }
    
}

